<!DOCTYPE html >
<html >
{{>head}}
<body>
{{>menu}}
<div class="container">
    <div class="row">
       <!-- <div class="col-md-4 col-md-offset-4 panel panel-default"> -->
        <h1 align="center" class="margin-base-vertical">Enter Quiz Questions</h1>
        <h5 align="left" class="margin-base-vertical"><code>{{errorMessage}}</code></h5>
        <div class="col-md-4">
        <form class="margin-base-vertical" method="post" action="/quizQuestionEntrySubmit">
          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-user"></span></span>
            <input type="number" required class="form-control input-lg" name="questionnumber" placeholder="Question Number:" /> 
          </p>
          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-user"></span></span>
            <input type="text" required class="form-control input-lg" name="statement"  placeholder="Question Statement:" /> 
          </p>
	       <p class="input-group ">
            <span class="input-group-addon"><span class="icon-user"></span></span>
            <input type="text" required class="form-control input-lg" name="option1" placeholder="Option 1:" />
          </p>
          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-envelope"></span></span>
            <input type="text" required class="form-control input-lg" name="option2" placeholder="Option 2:" />
          </p>
          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-envelope"></span></span>
            <input type="text" required class="form-control input-lg" name="option3" placeholder="Option 3:" />
          </p>

          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-user"></span></span>
            <input type="text" required class="form-control input-lg" name="option4" placeholder="Option 4:" />

          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-user"></span></span>
            <input type="text" required class="form-control input-lg" name="answer" placeholder="Correct Answer" />
          </p>
            <p class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Submit Question</button>
          </p>
		</form>
	    </div>
      </div>
   </div>
</div>
{{>jsIncludes}}

</body>
</html>
