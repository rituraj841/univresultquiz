<!DOCTYPE html>
<html>
<head>
{{>head}}
</head>
<body>
{{>menu}}
 <div class="container">
    <div class="row">
       <!-- <div class="col-md-4 col-md-offset-4 panel panel-default"> -->
        <h1 align="center" class="margin-base-vertical">Take Quiz</h1>
        <h5 align="left" class="margin-base-vertical"><code>{{{errorMessage}}}</code></h5>
        {{#if HAS_QUESTION }}
        <div class="col-md-4">
        <form class="margin-base-vertical" method="post" action="/quizExamForm">
          <p class="input-group ">
           <input type="text" readonly name="Q" value={{QUESTION.qnumber}}  class="form-control" /> {{QUESTION.qstmnt}}
          </p>
          <p class="input-group ">
            <input type="radio"  name="answer"  value="1"> {{QUESTION.option1}} </input>
          </p>
          <p class="input-group ">
            <input type="radio"  name="answer"  value="2"> {{QUESTION.option2}} </input>
          </p>
          <p class="input-group ">
            <input type="radio"  name="answer"  value="3"> {{QUESTION.option3}} </input>
          </p>              
          <p class="input-group ">
            <input type="radio"  name="answer"  value="4"> {{QUESTION.option4}} </input>
          </p>
          <p class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Submit Question</button>
          </p>
		</form>
	    </div>
    {{/if}}  
      </div>
   </div>
</div>
{{>jsIncludes}}

</body>
</html>
